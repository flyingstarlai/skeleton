<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@color/md_grey_900"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_padding_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_id_lbl"
            android:textSize="@dimen/text_size_xnormal"
            android:text="Id: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_id"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_alignBaseline="@+id/tv_module_id_lbl"
            android:layout_toRightOf="@+id/tv_module_id_lbl"
            android:text="empty"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_name_lbl"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_below="@+id/tv_module_id_lbl"
            android:text="Name: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_name"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_alignBaseline="@+id/tv_module_name_lbl"
            android:layout_toRightOf="@+id/tv_module_name_lbl"
            android:layout_below="@+id/tv_module_id_lbl"
            android:text="empty"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_location_lbl"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_below="@+id/tv_module_name_lbl"
            android:text="Location: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_location"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_alignBaseline="@+id/tv_module_location_lbl"
            android:layout_toRightOf="@+id/tv_module_location_lbl"
            android:layout_below="@+id/tv_module_name_lbl"
            android:text="empty"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_description_lbl"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_below="@+id/tv_module_location_lbl"
            android:text="Description: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_module_description"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_toRightOf="@+id/tv_module_description_lbl"
            android:layout_below="@+id/tv_module_location_lbl"
            android:maxWidth="150dp"
            android:text="empty"/>


