<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="starlai.dev.skeleton.ui.module.ModuleFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/md_grey_800"
        card_view:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                card_view:cardBackgroundColor="@color/md_grey_800"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_padding_normal"
                    >
                    <ImageView
                        android:id="@+id/iv_submodule"
                        android:layout_marginRight="@dimen/margin_padding_normal"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/ic_router_white_48dp"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/titleText"
                        android:layout_toRightOf="@+id/iv_submodule"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_header"
                        android:text="Machine: MAC-RR-123"
                        android:textColor="@color/md_white_1000"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:id="@+id/titleText2"
                        android:layout_below="@+id/titleText"
                        android:layout_toRightOf="@+id/iv_submodule"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/text_size_xnormal"
                        android:text="Module: Mod ARG"
                        android:fontFamily="sans-serif-condensed"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/empty_text"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="@dimen/margin_padding_normal"
                android:gravity="center"
                android:textStyle="italic"
                android:visibility="gone"
                android:textSize="@dimen/text_size_huge"
                android:text="Belum ada data"
                android:fontFamily="sans-serif-condensed"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rcv_module"
                android:layout_below="@+id/cardViewTop"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_start_machine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/md_brown_700"
            android:layout_margin="@dimen/fab_margin"
            app:layout_anchorGravity="center_vertical|right"
            app:srcCompat="@drawable/ic_send_white_48x48"
            android:layout_gravity="bottom|right" />
    </android.support.v7.widget.CardView>


</RelativeLayout>
